<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyEmployees" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueColor</item>
        <item name="colorSecondaryVariant">@color/blueColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:top">4dp</item>
    </style>

    <style name="bottomNavigationStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:top">4dp</item>
    </style>
</resources>